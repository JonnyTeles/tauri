{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jurema-desktop",
  "version": "0.1.0",
  "identifier": "com.windows.jurema-desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Jurema Desktop",
        "width": 800,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["shell-capability", "default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/jurema-icon.png",
      "icons/jurema.ico",
      "icons/twitch-icon.png",
      "icons/ytb-music-icon.png",
      "icons/discord-icon.png",
      "icons/youtube-icon.png"
    ],
    "resources": ["icons/*"]
  }
}
